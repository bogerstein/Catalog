<h1>Listing books</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Read</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><% if book.read %><div class="glyphicon glyphicon-ok"></div><% end %></td>
        <td width="25px"><%= link_to '', book, class: 'glyphicon glyphicon-eye-open' %></td>
        <td width="25px"><%= link_to '', edit_book_path(book), class: 'glyphicon glyphicon-pencil' %></td>
        <td width="25px"><%= link_to '', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'glyphicon glyphicon-trash' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, class: 'btn btn-large btn-primary' %>
