<div id="search">
	<form>
		<input id="livesearch_query" type="text" size="30" onkeyup="showResult(this.value)", class="form-control">
		<div id="livesearch_results"></div>
	</form>
</div>

<div id="createBook" style="display: none;">
	<table width="100%" style="margin-bottom: 20px;">
		<tr>
			<td>
				<img id="bookBigImage" src=""/>
			</td>
			<td width="100%">
				<h1 id="bookTitle" />
				<h2 id="bookAuthor" />
			</td>
		</tr>
	</table>

	<% modal ||= false %>
	<% remote = modal ? true : false %>
	<%= form_for(@book, remote: remote, html: {role: :form, 'data-model' => 'book'}) do |f| %>
	  <% if @book.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

	      <ul>
	      <% @book.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>

	  <!-- Values are set in books.js -->
	  <%= f.hidden_field :title %>
	  <%= f.hidden_field :author %>
	  <%= f.hidden_field :description %>
	  <%= f.hidden_field :pages %>
	  <%= f.hidden_field :release_date %>
	  <%= f.hidden_field :link %>
	  <%= f.hidden_field :small_image %>
	  <%= f.hidden_field :big_image %>

	  <div class="form-group">
	    <%= f.label :read, class: 'control-label' %><br>
	    <%= f.check_box :read, class: 'form-control' %>
	    <span class="help-block"></span>
	  </div>
	  <div class="form-group">
	    <%= f.label :digital, class: 'control-label' %><br>
	    <%= f.check_box :digital, class: 'form-control' %>
	    <span class="help-block"></span>
	  </div>
	  <div class="actions">
	    <%= f.submit class: 'btn btn-large btn-primary' %>
	  </div>
	<% end %>
</div>