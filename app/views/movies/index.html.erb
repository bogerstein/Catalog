<h1>Listing movies</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Sd</th>
      <th>Hd</th>
      <th>Threed</th>
      <th>Digital</th>
      <th>Watched</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.sd %></td>
        <td><%= movie.hd %></td>
        <td><%= movie.threed %></td>
        <td><%= movie.digital %></td>
        <td><%= movie.watched %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_movie_path, class: 'btn btn-large btn-primary' %>
